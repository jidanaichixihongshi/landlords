[
	{landlords,
		[
			{center_node, 'test@hostname'},
			{listen_port, 13657}
		]
	},
	{lager,
		[
			{async_threshold, 5000},
			{async_threshold_window, 50},
			{crash_log, "/var/logs/tuita/landlords/crash.log"},
			{crash_log_msg_size, 65536},
			{crash_log_size, 10485760},
			{crash_log_date, "$D0"},
			{crash_log_count, 5},
			{handlers,
				[
					{lager_console_backend,
						[alert,
							{lager_default_formatter,
								[date, " ", time, ", [", severity, "] ", pid, " ", module, ":", function, " ", message, "\n"]
							}
						]
					},

					{lager_file_backend,
						[
							{file, "/var/logs/tuita/landlords/error.log"},
							{level, error},
							{size, 1048576000},
							{date, "$D0"},
							{count, 10},
							{formatter, lager_default_formatter},
							{formatter_config,
								[date, " ", time, " [", severity, "] ", pid, " ", module, ":", function, " ", line, " ", message, "\n"]
							}
						]
					},

					{lager_file_backend,
						[
							{file, "/var/logs/tuita/landlords/console.log"},
							{level, debug},
							{size, 1048576000},
							{date, "$D0"},
							{count, 10},
							{formatter, lager_default_formatter},
							{formatter_config,
								[date, " ", time, " [", severity, "] ", pid, " ", module, ":", function, " ", line, " ", message, "\n"]
							}
						]
					}
				]
			}
		]
	}
].


